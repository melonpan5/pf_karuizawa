<div class="container">
	<div class="row">
		<div class="col-lg-10">
			<div class="title mt-5"><h2>Wedding Topics</h2></div>
            <table class="table table-sm　table-hover table-responsive">
                <thead>
                    <tr>
                        <th>date</th>
                        <% if admin_signed_in? %>
                        <th>category</th>
                        <% end %>
                        <th>title</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @posts.each do |post| %>
                    <tr class="active">
                         <td><%= post.created_at.strftime('%m/%d') %></td>
                        <% if admin_signed_in? %>
                        <td><%= post.tag %></td>
                        <% end %>
                        <td><%= post.title %></td>
                        <td><%= link_to "詳細", admins_blog_path(post),class: "btn-sm btn-info" %></td>
                        <% if admin_signed_in? %>
                        <td><%= link_to "編集", edit_admins_blog_path(post),class: "btn-sm btn-primary" %></td>
                        <% end %>
                    </tr>
                    <% end %>
                    <%= paginate @posts %>
                </tbody>
            </table>
		</div>
	</div>
</div>