<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="title mt-5">
                <h2><%= @customer.family_name %><%= @customer.first_name %>様の詳細ページ</h2>
            </div>
<%# 会員情報 %>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th class="table-success">会員ID</th>
                        <th class="table-success">お名前</th>
                        <th class="table-success">お名前（かな）</th>
                        <th class="table-success">連絡先電話番号</th>
                        <th class="table-success">連絡先メールアドレス</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="active">
                        <td><%= @customer.id %></td>
                        <td><%= @customer.family_name %> <%= @customer.first_name %></td>
                        <td><%= @customer.kana_family_name %> <%= @customer.kana_first_name %></td>
                        <td><%= @customer.phone_number %></td>
                        <td><%= @customer.email %></td>
                    </tr>
                </tbody>
            </table>
 <%# 問い合わせプラン情報%>
    <div class="title">
            <h4><%= @customer.family_name %>様の問い合わせ中プラン一覧</h4>
    </div>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th class="table-success">問い合わせプラン</th>
						<th class="table-success">登録日時</th>
					</tr>
				</thead>
				<tbody>
					<% @order_plans.each do |order_plan| %>
					<tr class="active">
                        <td><%= order_plan.id %></td>
						<td><%= link_to order_plan.created_at.strftime('%Y/%m/%d %H:%M:%S') ,  customers_order_plan_path(order_plan), data: {"turbolinks" => false} %></td>
						
					</tr>
					<% end %>
				</tbody>
			</table>
<%# クライアント一覧ここまで %>

<%# 登録フォーム %>
<%# 共通ボディー閉じタグ %>
    </div>
</div>
</div>