<div class="container">
<div class="row">
    <div class="col-xs-12">
        <div class="title mt-5">
            <h2>Step:3 プランメニューを選択してね</h2>
        </div>
            	<%= render '/layouts/errors', obj: @pre_plan %>
                <% if flash[:notice] %>
                 <div class="error-comment"><h2><%= flash[:notice] %></h2></div>
                <% end %>

    </div>
</div>

 <%# 共通ボディー開始タグここまで%>
<!-- 変更フォーム -->
<%= form_with model: @pre_plan, url:customers_pre_plans_path,local: :true, class:"form-horizontal" do |f| %>

    <%# 飲食プラン%> 
    <div class="stripe-pattern">その１：料理・飲み物を選択してね</div>
    <div class="form-group menue_box" id="food_menue_box">    
      
        <% @food_items.each do |food| %>
            <div class="menue_select">
               <%= f.label :meal_item_id,for:"radio_bottom#{food.id}" do %>
                <ul>
                    <%= f.radio_button :meal_item_id, food.id ,id:"radio_bottom#{food.id}", value:"radio_bottom", class:"radio_btn"%> 
                    <li><div class="menue">プラン名：<%= food.name %></div></li>
                    <div class="menue">
                        <%= attachment_image_tag food, :item_image, format: 'jpeg', fallback: "no_image.jpg", class:"index-img", size: "200x200" %>
                    <li></div>
                    <div class="menue">内容：<%= food.description %></div></li>
                    <li><div class="menue">ご料金(税抜)：<%= food.unit_price.to_s(:delimited) %>円／人</div></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    </div>
    <%# ケーキプラン%> 
    <div class="stripe-pattern">その２：ケーキを選択してね</div>
    <div class="form-group menue_box"  id="cake_menue_box">    
      
        <% @cake_items.each do |item| %>
            <div class="menue_select">
               <%= f.label :cake_item_id,for:"radio_bottom#{item.id}" do %>
                <ul>
                    <%= f.radio_button :cake_item_id, item.id ,id:"radio_bottom#{item.id}", value:"radio_bottom" %> 
                    <li><div class="menue">プラン名：<%= item.name %></div></li>
                    <div class="menue">
                        <%= attachment_image_tag item, :item_image, format: 'jpeg', fallback: "no_image.jpg", class:"index-img", size: "200x200" %>
                    </div>
                    <li><div class="menue">内容：<%= item.description %></div></li>
                    <li><div class="menue">ご料金(税抜)：<%= item.unit_price.to_s(:delimited) %>円</div></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    </div>
       <%# 装花プラン%> 
    <div class="stripe-pattern">その３：装飾のお花を選択してね</div>
    <div class="form-group  menue_box" id="flower_menue_box">    
      
        <% @flower_items.each do |item| %>
            <div class="menue_select">
               <%= f.label :flower_item_id,for:"radio_bottom#{item.id}" do %>
                <ul>
                    <%= f.radio_button :flower_item_id, item.id ,id:"radio_bottom#{item.id}", value:"radio_bottom" %> 
                    <li><div class="menue">プラン名：<%= item.name %></div></li>
                    <div class="menue">
                        <%= attachment_image_tag item, :item_image, format: 'jpeg', fallback: "no_image.jpg", class:"index-img", size: "200x200" %>
                    </div>
                    <li><div class="menue">内容：<%= item.description %></div></li>
                    <li><div class="menue">ご料金(税抜)：<%= item.unit_price.to_s(:delimited) %>円</div></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    </div>
       <%# 装花プラン%> 
    <div class="stripe-pattern">その4：ドレスのプランを選択してね</div>
    <div class="form-group menue_box" id="dress_menue_box">    
      
        <% @dress_items.each do |item| %>
            <div class="menue_select">
               <%= f.label :dress_item_id,for:"radio_bottom#{item.id}" do %>
