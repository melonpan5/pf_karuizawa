<div class="container">
<div class="row">
    <div class="col-xs-12">
        <div class="title">
            <h2>パスワードをお忘れですか？</h2>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
<%# form%>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="mt-2 field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mt-2 actions">
    <%= f.submit "パスワードを再発行する", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>

        </div>
    </div>
</div>
