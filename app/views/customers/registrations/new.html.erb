<div class="container">
<div class="row">
    <div class="col-xs-12">
        <div class="title">
            <h2>新規会員登録</h2>
        </div>
        <div class="title">
            <p>プラン作成には新規会員登録が必要です</p>
        </div>
    </div>
</div>

 <%# 共通ボディー開始タグここまで%>
 <div class="row">
    <div class="col-xs-12">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "customers/shared/error_messages", resource: resource %>
            <table class= "table table-borderless table-sm">
                <tr>
                    <td>
                        <%= f.label :'(姓)' %>
                    </td>
                    <td>
                        <%= f.text_field :family_name %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.label :'(名)' %>
                    </td>
                    <td>
                        <%= f.text_field :first_name %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.label :'(カナ姓)' %>
                    </td>
                    <td>
                        <%= f.text_field :kana_family_name %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.label :'(カナ名)' %>
                    </td>
                    <td>
                        <%= f.text_field :kana_first_name %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.label :email %>
                    </td>
                    <td>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.label :'電話番号' %>
                    </td>
                    <td>
                        <%= f.text_field :phone_number %>
                    </td>
                </tr>
                <tr class="password-top">
                    <td>
                        <%= f.label :password %>
                    </td>
                    <td>
                        <% if @minimum_password_length %>
                        <%= @minimum_password_length %> 文字以上</em>
                        <% end %><br />
                        <%= f.password_field :password, autocomplete: "new-password" %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.label :password_confirmation %>
                    </td>
                    <td>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.submit "会員登録", class: "btn btn-info btn-lg" %>
                    </td>
                </tr>
            <% end %>
            
            </table>


        <%= render "customers/shared/links" %>
        </div>
    </div>
</div>
