<div class="container">
<div class="row">
    <div class="col-12">
        <div class="title my-5">
            <h2>問い合わせフォーム</h2>
            <%= render '/layouts/errors', obj: @contact %>
        </div>
        <div class="title">
            <p>いただいた内容につきましては、確認の上改めて担当者よりご連絡させて頂きます。</p>
        </div>
        
    </div>
</div>

 <%# 共通ボディー開始タグここまで%>
 <div class="row">
    <div class="col-md-6 col-sm-6 col-xs-12">
            <%= form_with(model: @contact, url: contacts_path, local: true) do |f| %>
            <table class= "table table-borderless table-sm">
                <tr>
                    <td>
                        <%= f.label :'お名前' %>
                    </td>
                    <td>
                        <%= f.text_field :name %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.label :'お名前カナ' %>
                    </td>
                    <td>
                        <%= f.text_field :kana_name %>
                    </td>
                </tr>
                <tr>
                    <td>
                          <%= f.label :email, '返信先メールアドレス' %>
                    </td>
                    <td>
                        <%= f.text_field :email %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <%= f.label :message, 'お問い合わせ内容' %>
                    </td>
                    <td>
                       <%= f.text_area :message, size: '10x10', class: 'form-control' %>
                    </td>
                </tr>
                <tr>
                    <td class="text-center">
                        <%= f.submit "送信", class: "text-center my-3 btn btn-info btn-lg" %>
                    </td>
                </tr>
            <% end %>          
            </table>
        </div>
    </div>
</div>
</div>
